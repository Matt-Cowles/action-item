<% layout ('layouts/boilerplate') %>

<div class="card m-auto w-75 mt-5">
  <h3 class="text-center mt-3">Add New Employee</h3>
  <form action="/employee" method="POST" class="m-auto mt-5 mb-5 w-50">
    <div class="mb-3">
      <label for="name" class="form-label">Employee Name</label>
      <input type="text" class="form-control" name="employee[name]" id="" aria-describedby="employeeName" />
    </div>
    <div class="mb-3 mt-4">
      <span class="">Select Employee's Position</span>
      <select class="form-select form-select-md mb-3 mt-2" aria-label=".form-select-md example" name="employee[position]">
        <option selected disabled hidden></option>
        <option>MFG Supervisor</option>
        <option>MFG Specialist</option>
        <option>MFG Senior</option>
        <option>MFG Associate IV</option>
        <option>MFG Associate III</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Submit</button>
  </form>
</div>
