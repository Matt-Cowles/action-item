<% layout('layouts/boilerplate') %>

<div class="card m-auto w-75 mt-5">
  <div class="card-container mt-5 mb-5">
    <div class="text-center">
      <h3><%=employee.name%></h3>
      <p><%=employee.position%></p>

      <a href="/team/<%=employee._id%>/edit" class="position-absolute top-0 end-0 btn mt-4 me-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
          <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
        </svg>
      </a>

      <div class="current-actions mt-5 mb-3">Current Action Items</div>
      <hr class="w-25 m-auto mb-3" />
    </div>

    <div class="container">
      <div class="offset-1 mb-5">
        Short Term -
        <ol class="mt-3">
          <li>this</li>
          <li>is</li>
          <li>palceholder</li>
        </ol>
      </div>

      <div class="offset-1 mb-5 w-75">
        <div class="d-flex justify-content-between">
          <span>Long Term -</span>
          <a class="">New item</a>
        </div>
        <ol class="mt-3">
          <% let i = 1 %> <% for (let item of items) { %> <% if (item.complete === false) { %>
          <li class="mt-3">
            <div class="position-relative">
              <button class="btn action-item-btn w-100 ms-3" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample<%=i%>" aria-expanded="false" aria-controls="collapseExample" style="background-color: #ebf2fb"><%= item.title%></button>

              <!-- Create Check Complete Button on left side of the action item title -->

              <form action="/item/<%=item._id%>/mark-complete?_method=PUT" method="POST">
                <button class="position-absolute top-0 start-0 btn ms-4">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                    <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                  </svg>
                </button>
              </form>

              <!-- Create Edit Pencil Button on the right side of the action item title -->

              <a href="/item/<%=item._id%>/edit" class="position-absolute top-0 end-0 btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                  <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                </svg>
              </a>

              <div class="collapse w-100 ms-3" id="multiCollapseExample<%=i%>">
                <!-- If item has new update, it will display it at the top of action item drop down menu -->

                <% if(item.newUpdate === true ) { %>
                <label for="update" class="form-control mt-3" style="background-color: #f2f589">
                  <span class="fw-bold">New Update:</span>
                  <span class="ms-3"><%=item.update%></span>
                </label>
                <form action="/item/<%=item.id%>/confirm-update?_method=PUT" method="POST">
                  <button class="btn btn-outline-primary mt-2 w-50 offset-3 mb-5">Confirm Update</button>
                </form>
                <% } %>

                <!-- Table displaying information of action item -->

                <table class="table table-borderless ms-5 mt-3 w-75">
                  <tbody>
                    <tr>
                      <th scope="row">Description:</th>
                      <td><%=item.desc%></td>
                    </tr>
                    <tr>
                      <th scope="row">Due Date:</th>
                      <td><%=item.dueDate%>></td>
                    </tr>
                    <tr>
                      <th scope="row">Updates:</th>
                      <td>
                        <ul class="form-control list-group list-group-flush">
                          <% for(let update of item.update) { %>
                          <li class="list-group-item"><%=update%></li>
                          <% } %>
                        </ul>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- Popup window to create a new update -->

                <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalToggleLabel"><%=item.title%></h1>
                        <button type="button" class="btn-close offset-3" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                    <form action="/item/<%=item.id%>/new-update?_method=PUT" method="POST">
                      <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Enter New Update:</label>
                      </div>
                      <div class="mt-3 mb-3 text-center">
                          <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Create Update!</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <a class="btn btn-primary offset-3 mb-5 w-50 mt-5" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Create a new Update!</a>
              </div>
            </div>
          </li>
          <% } %> <% i++ %> <% } %>
        </ol>
      </div>
    </div>

    <hr class="w-75 m-auto mb-5" />

    <div class="mt-5">
      <button class="btn w-50 offset-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style="background-color: #ebf2fb">Completed</button>

      <div class="collapse w-50 offset-3" id="collapseExample">
        <%for (let item of items) { %> <% if (item.complete === true) { %>
        <div class="list-group">
          <a href="/item/<%=item._id%>" class="list-group-item list-group-item-action text-center" aria-current="true"><%= item.title %></a>
          <% } %> <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
