<% layout('layouts/boilerplate') %>

<div class="card m-auto w-75 mt-5">
  <div class="card-container mt-5 mb-5">
    <div class="text-center">
      <h3><%=employee.name%></h3>
      <p><%=employee.position%></p>

      <a href="/team/<%=employee._id%>/edit" class="position-absolute top-0 end-0 btn mt-4 me-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
          <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
        </svg>
      </a>

      <div class="current-actions mt-5 mb-3">Current Action Items</div>
      <hr class="w-25 m-auto mb-3" />
    </div>

    <div class="container">
      <div class="offset-1 mb-5">
        Short Term -
        <ol class="mt-3">
          <li>this</li>
          <li>is</li>
          <li>palceholder</li>
        </ol>
      </div>

      <div class="offset-1 mb-5 w-75">
        <div class="d-flex justify-content-between">
          <span>Long Term -</span>

           <div class="modal fade" id="exampleModalToggle" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Create New Action Item</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form action="/team/<%=employee._id%>/new-item" method="POST">
                    <div class="mb-3">
                      <label for="recipient-name" class="col-form-label">Title:</label>
                      <input type="text" class="form-control" id="recipient-name" name="item[title]">
                    </div>
                    <div class="mb-3">
                      <label for="message-text" class="col-form-label">Description:</label>
                      <textarea class="form-control" id="message-text" name="item[desc]"></textarea>
                    </div>
                    <div class="mb-3 mt-4">
                      <label for="message-text" class="col-form-label me-2">Due Date:</label>
                      <input type="date" class="form form-md mb-3 mt-2" aria-label=".form-md example" name="item[dueDate]" />
                    </div>
                    <hr class="w-100 mt-5" />
                    <button class="btn btn-primary offset-3 mt-3 mb-3 w-50">Create Action Item</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <a class="btn btn-outline-primary" data-bs-toggle="modal" href="#exampleModalToggle" role="button">New Item</a>
           

        </div>
        <ol class="mt-3">
          <% let i = 1 %> <% for (let item of items) { %> <% if (item.complete === false) { %>
          
            <%- include ('../partials/actionItem', {item, i}) %>

          <% } %> <% i++ %> <% } %>
        </ol>
      </div>
    </div>

    <hr class="w-75 m-auto mb-5" />

    <div class="mt-5">
      <button class="btn w-50 offset-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style="background-color: #ebf2fb">Completed</button>

      <div class="collapse w-50 offset-3" id="collapseExample">
        <%for (let item of items) { %> <% if (item.complete === true) { %>
        <div class="list-group">
          <a href="/item/<%=item._id%>" class="list-group-item list-group-item-action text-center" aria-current="true"><%= item.title %></a>
          <% } %> <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
