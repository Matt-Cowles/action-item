<% layout ('layouts/boilerplate') %>

<div class="card mt-5">
  <h3 class="text-center mt-3"><%=item.title%></h3>
  <table class="table table-borderless mt-3 w-75 offset-1">
    <tbody>
      <tr>
        <th scope="row">Description:</th>
        <td><%=item.desc%></td>
      </tr>
      <tr>
        <th scope="row">Due Date:</th>
        <td><%=item.dueDate%>></td>
      </tr>
      <tr>
        <th scope="row">Updates:</th>
        <td>
          <ul class="form-control list-group list-group-flush">
            <% for(let update of item.update) { %>
            <li class="list-group-item"><%=update%></li>
            <% } %>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>
  <form action="/item/<%=item._id%>/mark-complete?_method=PUT" method="POST">
    <button class="btn btn-outline-secondary offset-5 mt-3 mb-5">Mark as Not Complete</button>
  </form>
</div>
