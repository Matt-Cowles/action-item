<% layout ('layouts/boilerplate') %>

<div class="card m-auto w-75 mt-5">
  <form action="/<%=item._id%>/edit?_method=PUT" method="POST" class="m-auto mt-3 w-50">
    <h3 class="text-center mb-3"><%=item.title%></h3>
    <div class="mb-3">
      <label for="name" class="form-label">Description:</label>
      <input type="text" class="form-control" name="item[desc]" id="" aria-describedby="itemDescription" placeholder="<%=item.desc%>" />
    </div>
    <div class="mb-1 mt-5">
      <span class="me-2">Due:</span>
      <input type="date" class="form form-md mb-3 mt-2" aria-label=".form-md example" name="item[dueDate]" />
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Update:</label>
      <ul class="form-control list-group list-group-flush">
        <% for (let update of item.update) { %>
        <li class="list-group-item"><%=update%></li>
        <% } %>
      </ul>
      <div class="mt-3">
        <button class="btn w-100" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style="background-color: #ebf2fb">New Update</button>

        <div class="collapse w-100" id="collapseExample">
          <div class="form-floating">
            <textarea class="form-control" placeholder="Enter New Update" id="floatingTextarea2" style="height: 100px"></textarea>
            <label for="floatingTextarea2">Enter New Update</label>
          </div>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-4 mb-4 offset-1 w-75">Update</button>
  </form>

  <form action="/team/<%=item._id%>/edit?_method=DELETE" method="POST">
    <a href="/team/<%=item._id%>/edit" class="position-absolute top-0 end-0 btn mt-4 me-4">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
      </svg>
    </a>
  </form>
</div>
