<div class="modal fade" id="editDescription<%=i%>" aria-hidden="true" aria-labelledby="exampleModalToggleLabelUpdate" tabindex="-2">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 fw-bolder offset-2" id="exampleModalToggleLabel">Edit Description</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/item/<%=item.id%>/edit?_method=PUT" method="POST">
                <label class="fw-bold" for="original-desc">Original Description -</label>
                    <div class="mt-2">
                        <textarea class="input-group border borderless container" id="original-desc" name="original[]" style="height: 150px" readonly tabindex="-1"><%= item.desc %></textarea>
                    </div>
            </div>
            <div class="mt-4">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 150px" name="item[desc]"></textarea>
                        <label for="floatingTextarea2">Enter New Description:</label>
                    </div>
                </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary mt-3 mb-3">Confirm Changes!</button>
            </form>
            </div>
        </div>
    </div>
</div>
<a class="text-decoration-none text-dark update-text" data-bs-toggle="modal" href="#editDescription<%=i%>" role="button"><%=item.desc%></a>