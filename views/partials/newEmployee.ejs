<div class="modal fade" id="createEmployee" aria-hidden="true" aria-labelledby="exampleModalToggleLabelUpdate" tabindex="-2">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="text-center mt-3 offset-2">Add New Employee</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/employee" method="POST" class="">
          <div class="mb-3">
            <label for="name" class="form-label">Employee Name</label>
            <input type="text" class="form-control" name="employee[name]" id="" aria-describedby="employeeName" />
          </div>
          <div class="mb-3 mt-4">
            <span class="">Select Employee's Position</span>
            <select class="form-select form-select-md mb-5 mt-2" aria-label=".form-select-md example" name="employee[position]">
              <option disabled selected hidden></option>
              <option>MFG Supervisor</option>
              <option>MFG Specialist</option>
              <option>MFG Senior</option>
              <option>MFG Associate IV</option>
              <option>MFG Associate III</option>
            </select>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-primary mt-3 mb-3">Confirm Changes!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<a class="text-decoration-none text-white nav-bar-item me-3" data-bs-toggle="modal" href="#createEmployee" role="button">Add Employee</a>
