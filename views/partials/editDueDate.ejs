<div class="modal fade" id="editDueDate<%=i%>" aria-hidden="true" aria-labelledby="exampleModalToggleLabelUpdate" tabindex="-2">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 fw-bolder offset-4" id="exampleModalToggleLabel">Edit Due Date</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/item/<%=item.id%>/edit?_method=PUT" method="POST">
                    <div class="d-flex justify-content-between ms-5 me-5">
                        <div class="mt-2">
                            <label class="fw-bold">Originally due -</label>
                            <div class="">
                                <% if (item.dueDate.getDate() < 9) { %>
                                    <%= ('0' + item.dueDate.getDate()).slice(-2) %>
                                <% } else { %> 
                                    <%=item.dueDate.getDate()%>
                                <% } %> 
                                <%=months[item.dueDate.getMonth()]%>
                                <%=item.dueDate.getFullYear()%>
                            </div>
                        </div>
                        <div class="">
                            <label for="item[dueDate]" class="col-form-label fw-bold">New Due Date -</label>
                            <div class="">
                                <input type="date" class="form form-md mb-3" aria-label=".form-md example" name="item[dueDate]" id="item-dueDate"/>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary mt-3 mb-3">Confirm Changes!</button>
            </form>
            </div>
        </div>
    </div>
</div>
<a class="text-decoration-none update-text" data-bs-toggle="modal" href="#editDueDate<%=i%>" role="button">
    <% if (item.dueDate.getDate() < 9) { %>
        <%= ('0' + item.dueDate.getDate()).slice(-2) %>
    <% } else { %> 
        <%=item.dueDate.getDate()%>
    <% } %> 
    <%=months[item.dueDate.getMonth()]%>
    <%=item.dueDate.getFullYear()%>
</a>